from enum import IntEnum

MENU = IntEnum("MENU", "rectangle square triangle trapeze circle exit")

def rectangle_area(length_a, width_b):
    if length_a and width_b > 0:
        return round(length_a * width_b, 2)
    return "Parameters must be greater than 0. Try again."

def square_area(edge_a):
    if edge_a > 0:
        return round(pow(edge_a, 2), 2)
    return "Parameter must be greater than 0. Try again."

def triangle_area(edge_a, height_h):
    if edge_a and height_h > 0:
        return round((edge_a * height_h)/2, 2)
    return "Parameters must be greater than 0. Try again."

def trapeze_area(edge_a, edge_b, height_h):
    if edge_a and edge_b and height_h > 0:
        return round(((edge_a + edge_b) * height_h)/2, 2)
    return "Parameters must be greater than 0. Try again."

def circle_area(radius_r):
    if radius_r > 0:
        pi = 3.14
        return round(pi * pow(radius_r, 2), 2)
    return "Parameter must be greater than 0. Try again."


print("Figure area calculator v1.0")

while True:
    print("===============================")
    print("1. Rectangle area.")
    print("2. Square area.")
    print("3. Triangle area.")
    print("4. Trapeze area.")
    print("5. Circle area.")
    print("6. EXIT.")
    print("===============================")

    selection = int(input("Select option: "))

    if selection == MENU.rectangle:
        try:
            a = float(input("Provide a: "))
            b = float(input("Provide b: "))
            print("Rectangle area: ", rectangle_area(a, b))
        except ValueError:
            print("Provide valid number.")
    elif selection == MENU.square:
        try:
            a = float(input("Provide a: "))
            print("Square area:", square_area(a))
        except ValueError:
            print("Provide valid number.")
    elif selection == MENU.triangle:
        try:
            a = float(input("Provide a: "))
            h = float(input("Provide h: "))
            print("Triangle area:", triangle_area(a, h))
        except ValueError:
            print("Provide valid number.")
    elif selection == MENU.trapeze:
        try:
            a = float(input("Provide a: "))
            b = float(input("Provide b: "))
            h = float(input("Provide h: "))
            print("Trapeze area:", trapeze_area(a, b, h))
        except ValueError:
            print("Provide valid number.")
    elif selection == MENU.circle:
        try:
            r = float(input("Provide r: "))
            print("Circle area:", circle_area(r))
        except ValueError:
            print("Provide valid number.")
    elif selection == MENU.exit:
        break
    else:
        print("Provide correct menu option. Try again.")
